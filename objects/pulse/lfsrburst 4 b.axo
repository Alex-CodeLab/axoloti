<objdefs>
   <obj.normal id="lfsrburst 4 b" uuid="ef5b7aaa45f16b22f3526ae2df55299700b2d8c6" sha="90fdfe1f1fddf1a1dbed31d35b4069057fc5f3c7">
      <sDescription>lfsr burst, 4bit = 15 samples, audio rate</sDescription>
      <author>Johannes Taelman</author>
      <license>BSD</license>
      <inlets>
         <bool32.rising name="trig" description="trigger"/>
      </inlets>
      <outlets>
         <frac32buffer.bipolar name="out" description="lfs burst"/>
      </outlets>
      <displays/>
      <params/>
      <attribs>
         <combo name="polynomial">
            <MenuEntries>
               <string>0x9</string>
               <string>0xC</string>
            </MenuEntries>
            <CEntries>
               <string>0x9</string>
               <string>0xC</string>
            </CEntries>
         </combo>
      </attribs>
      <code.declaration><![CDATA[uint32_t state;
int32_t count;
int32_t ntrig;
]]></code.declaration>
      <code.init><![CDATA[state = 0;
count = 0;
ntrig = 0;
]]></code.init>
      <code.krate><![CDATA[   if ((inlet_trig>0) && !ntrig) { state = 1; count=15; ntrig=1;}
   else { if (!(inlet_trig>0)) ntrig=0;}
]]></code.krate>
      <code.srate><![CDATA[if (count>0) {
  count--;
  if (state & 1)  {
     state = (state >> 1) ^ %polynomial%;
     outlet_out[buffer_index] = 1<<27;
  } else {
    state = (state >> 1);
     outlet_out[buffer_index] = -1<<27;
  }
} else outlet_out[buffer_index] = 0;
]]></code.srate>
   </obj.normal>
</objdefs>